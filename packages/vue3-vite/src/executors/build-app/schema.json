{
  "$schema": "http://json-schema.org/schema",
  "cli": "nx",
  "title": "App Builder",
  "description": "Build the app",
  "type": "object",
  "properties": {
    "dist": {
      "type": "string",
      "description": "Output directory for compiled app"
    },
    "mode": {
      "type": "string",
      "description": "Default environment mode",
      "default": "development"
    },
    "minify": {
      "type": "string",
      "description": "Minification type",
      "default": "esbuild"
    }
  },
  "required": []
}
